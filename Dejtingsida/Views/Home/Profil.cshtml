    @section Scripts {
        <script>
            var Inlägg = @Html.Raw(Json.Serialize(Model));
            var Message = $("#postInnehåll");
        $(() =>
            $("#post").click(() => {
                $.ajax({
                    message: $("#postInnehåll").val,
                    url: "/api/api/post",
                    type: "POST",
                    data: JSON.stringify(Inlägg),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: alert("Inlägg skapat")
                });
